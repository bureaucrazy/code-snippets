<%= form_for @work, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :category_id %>
    <%= f.collection_select :kind_id, Kind.all, :id, :language, {}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :snippet %>
    <%= f.text_area :snippet, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
